# Server UDP port (default: 5520)
HYTALE_PORT=5520

# If true and /hytale/Server/HytaleServer.aot exists, adds -XX:AOTCache=HytaleServer.aot (default: true)
USE_AOT_CACHE=true

# If true, runs hytale-downloader on every container start (default: true)
ENABLE_AUTO_UPDATE=true

# If true, does not delete ~/.hytale-downloader-credentials.json on 403 Forbidden (default: true)
SKIP_DELETE_ON_FORBIDDEN=true

# Adds --accept-early-plugins to launch options (default: false)
ACCEPT_EARLY_PLUGINS=false

# Adds --allow-op to launch options (default: false)
ALLOW_OP=false

# Path to the server assets zip inside the container (default: /hytale/Assets.zip)
ASSETS_PATH=/hytale/Assets.zip

# Authentication mode passed to the server (default: authenticated)
# Supported: authenticated, offline, insecure
AUTH_MODE=authenticated

# Bind address (default: 0.0.0.0)
BIND_ADDR=0.0.0.0

# If true, adds backup arguments (default: false)
BACKUP_ENABLED=false

# Backup output directory inside the container (default: /hytale/backups)
BACKUP_DIR=/hytale/backups

# Backup interval in minutes (default: 30)
BACKUP_FREQUENCY=30

# Adds --disable-sentry to launch options (default: false)
DISABLE_SENTRY=false

# JVM RAM Settings
JAVA_XMS=4G
JAVA_XMX=4G
